<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HealthHub" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryVariant">#388E3C</item>
        <item name="colorOnPrimary">#FFFFFF</item>
         <!-- Change la couleur violette  <item name="colorControlActivated">#4CAF50</item>-->
        <item name="android:statusBarColor">#000000</item> <!-- Or match your desired color -->
        <!-- Remove purple from TextInputLayout focus/underline -->
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlHighlight">@color/gray</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
        <item name="android:textColorHint">@color/hint_gray</item>


        <!-- Set default text color to black -->
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Theme.HealthHub" parent="Base.Theme.HealthHub" />
</resources>
