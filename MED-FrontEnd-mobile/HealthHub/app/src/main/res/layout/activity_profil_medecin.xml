<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image du médecin -->
        <ImageView
            android:id="@+id/imageMedecin"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/doctor"
            android:contentDescription="Photo du médecin"
            android:layout_marginBottom="16dp" />

        <!-- Nom -->
        <TextView
            android:id="@+id/tvNomMedecin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dr. Ayoub Nani"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Spécialité -->
        <TextView
            android:id="@+id/tvSpecialite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spécialité : Cardiologue"
            android:textSize="18sp"
            android:textColor="#000000"
            android:gravity="center" />

        <!-- Note / Rating -->
        <TextView
            android:id="@+id/tvRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note : 4.5 ★"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description : Spécialiste en cardiologie depuis 10 ans"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <!-- Adresse / Lieu de travail -->
        <TextView
            android:id="@+id/tvAdresse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lieu : Clinique Al Amal"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <!-- Expérience -->
        <TextView
            android:id="@+id/tvExperience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expérience : 10 ans"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="8dp" />

        <!-- Bouton pour prendre RDV -->
        <Button
            android:id="@+id/btnPrendreRdv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prendre Rendez-vous"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>a
</ScrollView>
