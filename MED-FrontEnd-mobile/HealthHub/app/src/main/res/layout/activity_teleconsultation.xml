<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chatLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="8dp">

    <!-- Zone de messages -->
    <ScrollView
        android:id="@+id/scrollViewMessages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/messagesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Message du mÃ©decin (Nom du mÃ©decin stylisÃ© comme un message) -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_gravity="start"
                app:cardBackgroundColor="#E1F5FE">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    tools:ignore="ExtraText">

                    <!-- Nom du mÃ©decin comme message -->
                    <TextView
                        android:id="@+id/textViewDoctorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr. Jean Dupont"
                        android:textSize="16sp"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>   <!-- Remplace par le nom dynamique -->


                   <!-- Message du mÃ©decin -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bonjour, comment Ã§a va ?"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:padding="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Message du patient (AlignÃ© Ã  droite, fond vert) -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_gravity="end"
                app:cardBackgroundColor="#DCF8C6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bonjour, comment Ã§a va ?"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:padding="10dp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Envoi de message texte -->
    <LinearLayout
        android:id="@+id/sendMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <EditText
            android:id="@+id/editTextMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Ã‰crire un message..."
            android:background="@android:drawable/edit_text"
            android:padding="8dp"
            android:textColor="#000000" />

        <ImageButton
            android:id="@+id/btnSendMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_send"
            android:contentDescription="Envoyer"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#4CAF50" />
    </LinearLayout>

    <!-- Boutons appel vocal et mÃ©dia -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <Button
            android:id="@+id/btnCallDoctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ž Appeler"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnUploadMedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Ž Photo/Audio"
            android:layout_marginStart="16dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>
